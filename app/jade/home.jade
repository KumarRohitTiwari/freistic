header
  div.navbar.navbar-default.custom-navbar(ng-include="'views/homeheader.html'", role='navigation')
main.fullheight
  .container
    .row
      .col-md-7.homebg
        div(style='text-align:center;')
          img(src='../images/comingsoon.jpg')
      .col-md-5
        h1 Create a new account
        .alert.alert-danger(ng-if='homeCtrl.errormsg != ""') {{homeCtrl.errormsg}}
        .row
          .col-md-12(style='text-align: center;')
            div.btn-group(role='group')
              label.btn.btn-default.btn-xlarge(ng-class="{'active': homeCtrl.type === 'transporter'}",  ng-click="homeCtrl.type = 'transporter'") Transporter
              label.btn.btn-default.btn-xlarge(ng-class="{'active': homeCtrl.type === 'consumer'}",  ng-click="homeCtrl.type = 'consumer'") Consumer
        .row.rowgap
          .col-md-6
            input.form-control(type='text' ng-model='homeCtrl.firstName' placeholder='First Name')
          .col-md-6
            input.form-control(type='text' ng-model='homeCtrl.lastName' placeholder='Last Name')
        .row.rowgap
          .col-md-12
            input.form-control(type='text' ng-model='homeCtrl.email' placeholder='Email Address')
        .row.rowgap
          .col-md-12
            input.form-control(type='text' ng-model='homeCtrl.mobile' placeholder='Mobile Number')
        .row.rowgap
          .col-md-12
            input.form-control(type='password' ng-model='homeCtrl.password' placeholder='Password')
        .row.rowgap
          .col-md-12
            btn.btn.btn-primary(ng-click='homeCtrl.createAccount()') Create Account
footer(ng-include="'views/footer.html'")